{
    "manifest_version": 3,
    "name": "YouTube Topic Filter",
    "version": "1.0",
    "description": "Extract summaries and quotes from YouTube videos based on specific topics or keywords.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://www.youtube.com/*",
        "*://www.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png"
        }
    },
    "icons": {
        "16": "images/icon16.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["quotes.html", "transcript.html", "transcript.js", "quotes.js"],
            "matches": ["*://www.youtube.com/*"]
        }
    ]
}